<mujoco model="inverted pendulum">
    <compiler inertiafromgeom="true"/>
    <default>
        <joint armature="0" damping="1" limited="true"/>
        <geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
        <tendon/>
        <motor ctrlrange="-3 3"/>
    </default>
    <option gravity="0 0 -9.81" integrator="RK4" timestep="0.02"/>
    <size nstack="3000"/>
    <worldbody>
        <!--geom name="ground" type="plane" pos="0 0 0" /-->
        <geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.9157 0.6529 0.6039 1" size="0.02 3" type="capsule"/>
        <body name="cart" pos="0 0 0">
            <joint axis="1 0 0" limited="true" name="slider" pos="0 0 0" range="-1.50 1.50" type="slide"/>
            <geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.6118 0.8627 1 1" size="0.1 0.1"
                  type="capsule"/>
            <body name="pole" pos="0 0 0">
                <joint axis="0 1 0" name="hinge" pos="0 0 0" range="-inf inf" type="hinge"/>
                <geom fromto="0 0 0 0 0 0.6" name="cpole" rgba="1 0.7137 0.7569 0.75" size="0.049 0.3" type="capsule"/>
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor ctrllimited="true" ctrlrange="-5 5" gear="100" joint="slider" name="slide"/>
    </actuator>
</mujoco>
